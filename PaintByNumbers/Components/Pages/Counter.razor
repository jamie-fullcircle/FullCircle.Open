@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<InputFile OnChange="UploadFile"></InputFile>

@code {
    private int currentCount = 0;

    private void UploadFile(dynamic args)
    {
        currentCount++;
    }

}